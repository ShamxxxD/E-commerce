{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"]
        },
        "target": "esnext",
        "module": "esnext",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "preserve"
    },
    "include": ["src", "config-overrides.js"],
    "exclude": ["node_modules"]
}
